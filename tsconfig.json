{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2020",
		"module": "commonjs",
		"jsx": "react",
		"outDir": "Bin",
		"rootDir": "Source",
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"preserveSymlinks": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"stripInternal": true,
		"removeComments": true,
		"paths": {
			"Library*": [
				"./Source/Library",
				"./Source/Library*"
			],
		}
	},
	"include": [
		"Source/"
	]
}