{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "noUnusedLocals": true,
    "stripInternal": true,
    "removeComments": false,
    "declaration": true,
    "declarationDir": "lib/types",
    "esModuleInterop": true,
    "paths": {
      "lib*": ["./src/lib", "./src/lib*"]
    }
  },
  "include": ["src/"],
  "exclude": ["src/test/"]
}
